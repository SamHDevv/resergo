{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "../../../../",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["../../../../node_modules/*"],
      "@database/*": ["database/*"],
      "@users/*": ["users/*"],
      "@businesses/*": ["businesses/*"],
      "@reserves/*": ["reserves/*"],
      "@company-services/*": ["company-services/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}